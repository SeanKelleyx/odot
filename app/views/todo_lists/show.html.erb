<h1><%= @todo_list.title %></h1>
<h1><%= @todo_list.description %></h1>

<% if @todo_list.has_incomplete_items? %>
	<h3>Incomplete Items:</h3>

	<ul>
		<% @todo_list.todo_item.incomplete.each do |incomplete_item| %>
		<li><%= incomplete_item.content %></li>
		<%end%>
	</ul>
<%end%>

<% if @todo_list.has_completed_items? %>
	<h3>Complete Items:</h3>

	<ul>
		<% @todo_list.todo_item.complete.each do |complete_item| %>
		<li><%= complete_item.content %></li>
		<%end%>
	</ul>
<%end%>


<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>
